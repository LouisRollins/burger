<h1>Burgers!</h1>

<h2>Uneaten:</h2>

<ul>
 
  {{#each burgers}}
  {{#unless devoured}}
   <li>
    {{this.id}}
    {{this.burger_name}}
    <button class= devourButton data-type={{this.id}}>Devour!</button>
     </li>
     {{/unless}}
  {{/each}}
 
</ul>

<h2>Already eaten:</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    <li>
      {{this.id}}
      {{this.burger_name}}
    </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burgerInput">Burger Name:</label>
    <input type="text" id="burgerInput" name="name">
  </div>

  <button type="submit" id = 'submit'>Add Burger</button>
</form>